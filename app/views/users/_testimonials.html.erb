 <% i = 0 %> 
 <% unless @testimonials.nil? %>
 <% @testimonials.each do |testimonial| %>
	 <ul class="list-table">
	 	<li class="text-left" style="width:60px;">
	 		<img class="img-circle" src="<%= facebook.get_picture(testimonial.to_node.uid,:type => "square", height: 50 , width: 50) %>" alt="" width="50px" height="50px">
	 	</li>
	 	<li class="text-left">
	 		<p class="nm">
	 			<span class="semibold">
	 				<blockquote class="mb0">
	 					<p class="font-15"><%= testimonial.say %></p>
	 				</blockquote>
	 			</span>
	 		</p>
	 	</li>
	 </ul>
	 <% if i>0 %>
	 	<hr class="m0-p0">
	 <% end %>
	 <% i = i+1 %> 
 <% end %>
 <% else %>
 No badges
 <% end %>