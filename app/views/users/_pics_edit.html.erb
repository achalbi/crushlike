
                    <% unless @pictures.nil? %>
                    <% @pictures.each do |pic| %>
                    <div class="col-md-4 shuffle" data-groups='["user<%= @user.uuid %>"]' data-date-created="" data-title="<%= pic %>">
                        <!-- thumbnail -->
                        <div class="thumbnail">
                            <!-- media -->
                            <div class="media">
                                <!-- indicator -->
                                <div class="indicator"><span class="spinner"></span></div>
                                <!--/ indicator -->
                                <!-- toolbar overlay -->
                                <div class="overlay">
                                    <div class="toolbar">
                                        <a href="<%= cloudinary_url(pic, :crop => :fill) %>" class="btn btn-default magnific" title="view picture"><i class="ico-search"></i></a>
                                        <p class="dis-none-imp"><%= pic %></p>
                                        <a href="#" class="btn btn-default set_default" title="Set as default picture" >
                                            <% if pic == @user.default_pic  %>
                                            <i class="ico-heart icon-red"></i>
                                            <% else %>
                                            <i class="ico-heart icon-silver"></i>
                                            <% end %>
                                        </a>
                                        <a href="#" class="btn btn-default delete_pic" title="Delete"><i class="ico-close"></i></a>
                                    </div>
                                </div>
                                <!--/ toolbar overlay -->
                                <img data-toggle="unveil" src="/assets/background/400x400/placeholder.jpg" data-src="<%= cloudinary_url(pic, :width => 175, :height => 200, :crop => :fill) %>" alt="Photo" width="100%" />
                            </div>
                            <!--/ media -->
                        </div>
                        <!--/ thumbnail -->
                    </div>
                    <% end %>
                    <% end %>
<script type="text/javascript">

$(function(){


      $(".shuffle-grid").magnificPopup({
          delegate: ".magnific",
          type: "image",
          gallery: {
              enabled: true
          }
      });
      
    $(".shuffle-grid").click(function(){
      $('#close_pics_modal').click();
    });
});
</script>